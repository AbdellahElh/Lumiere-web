{
  "buildCommand": "cd Rise.Client && npm install && npm run build:css && cd .. && dotnet publish Rise.Client/Rise.Client.csproj -c Release -o ./blazor-output && mkdir -p dist && cp -r ./blazor-output/wwwroot/* ./dist/",
  "outputDirectory": "dist",
  "installCommand": "echo 'Using custom build command'",
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/_framework/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
