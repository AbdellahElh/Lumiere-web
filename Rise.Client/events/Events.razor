
@page "/events"
@using Rise.Client.events.components;

<PageTitle>Events</PageTitle>

<div class="relative" style="height: 40vh">
    <video autoplay muted  loop class="absolute top-0 left-0 w-full h-full object-cover">
        <source src="/images/banner2.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>
    <div class="flex items-center justify-center h-full bg-black bg-opacity-50 relative z-10" >
        <h1 class="text-4xl md:text-4xl lg:text-5xl font-bold text-white text-center px-4" >
            Events | Vind wat jou enthousiast maakt!
        </h1>
    </div>
</div>

<div class="flex justify-center mt-8">
    <EventsFilter OnCinemaChanged="LoadEventWithFilters"/>

</div>

<div class="container mx-auto max-w-screen-xl px-4 mt-12 mb-4">
    @if (EventsList == null)
    {
        <p data-cy="loader" class="text-center">Loading events...</p>
    }
    else if (!EventsList.Any())
    {
        <p class="text-center p-4 text-lg">Geen Events beschikbaar.</p>
    }
    else
    {
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            @foreach (var eventItem in EventsList)
            {
                <EventItem
                    ImageUrl="@eventItem.Cover"
                    Title="@eventItem.Title"
                    Date="@eventItem.Date"
                    Location="@eventItem.Location"
                    Type="@eventItem.Type"
                    Id = "@eventItem.Id" />
                   
            }
        </div>
    }
</div>