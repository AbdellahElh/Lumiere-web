@page "/"

<PageTitle>Home</PageTitle>

<main class="overflow-hidden">

    <Banner />

    <section class="my-7">
        <MoviePosters MoviePosterDtos="moviePosters" />
    </section>


<section>
    @if (movies == null)
    {
        <p class="text-center">Loading movies...</p>
    }
    else if (!movies.Any())
    {
        <p class="text-center p-4 text-lg ">Geen films beschikbaar.</p>
    }
    else
    {
        <div class="flex flex-col gap-6 justify-between ">
            <MoviesList Movies="movies" />
            @if(TotalPages > 1)
            {
                <Pagination CurrentPage="@(filters.pageNumber ?? 1)"
                            TotalPages="TotalPages"
                            OnPrevious="PreviousPage"
                            OnNext="NextPage"
                            OnPageSelected="GoToPage" />
            }
        </div>
    }
</section>


</main>
