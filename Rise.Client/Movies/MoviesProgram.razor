@page "/Programma"



<div class="pb-2 pt-4">
    <MovieShowtimeFilters SelectedDate="@SelectedDate" SelectedCinemas="@SelectedCinemas" />
</div>

<div>
    @if (movies == null)
    {
        <p class="text-center">Loading movies...</p>
    }
    else if (!movies.Any())
    {
        <p class="text-center p-4 text-lg ">Geen films beschikbaar.</p>
    }
    else
    {
        <div class="flex flex-col gap-6 justify-between p-4" style="min-height: calc(100vh - 263px)">
            <MoviesList Movies="movies" />
            @if(TotalPages > 1)
            {
                <Pagination CurrentPage="@(filters.pageNumber ?? 1)"
                            TotalPages="TotalPages"
                            OnPrevious="PreviousPage"
                            OnNext="NextPage"
                            OnPageSelected="GoToPage" />
            }
        </div>
    }
</div>


